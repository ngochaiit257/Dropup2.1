@using Data;
@using Data.Providers;
@{
    ViewBag.Title = "Cấp tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 m-b-30">
        <!-- begin page title -->
        <div class="d-block d-sm-flex flex-nowrap align-items-center">
            <div class="page-title mb-2 mb-sm-0">
                <h1>Cấp tài khoản</h1>
            </div>
            <div class="ml-auto d-flex align-items-center">
                <nav>
                    <ol class="breadcrumb p-0 m-b-0">
                        <li class="breadcrumb-item">
                            <a href="/Home/Index"><i class="ti ti-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            Quản lý user
                        </li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">Cấp tài khoản</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- end page title -->
    </div>
</div>
<!-- end row -->
<div class="row" id="divInput">
    <div  class="col-xxl-9 col-xl-9 col-lg-9 col-md-9">
        <div class="card card-statistics">
            <div class="card-header">
                <div class="card-heading">
                    <h4 class="card-title">Thông tin tài khoản</h4>
                </div>
            </div>
            <div class="card-body">
                <div>
                    <form id="formInsert" class="form-horizontal" novalidate="novalidate">
                        <div class="form-group">
                            <label class="control-label" for="username">Username <span class="requirement-star-text">&ast;</span></label>
                            <div class="mb-2">
                                <input type="text" class="form-control" id="username" name="username" placeholder="Nhập tên đăng nhập">
                                <div class="invalid-feedback" id="username_feedback">
                                    Yêu cầu nhập tên đăng nhập.
                                </div>
                                <div class="invalid-feedback" id="username_check_duplicate_false">
                                    Tên đăng nhập đã có trong cơ sở dữ liệu. Vui lòng chọn tên khác.
                                </div>
                                <div class="valid-feedback" id="username_check_duplicate_true">
                                    Tên có thể sử dụng được.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="password">Password <span class="requirement-star-text">&ast;</span></label>
                                    <div class="mb-2">
                                        <input type="password" class="form-control inputmask" id="password" name="password" placeholder="Nhập mật khẩu">
                                        <div class="invalid-feedback" id="password_feedback">
                                            Yêu cầu nhập mật khẩu.
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="repassword">Xác nhận Password <span class="requirement-star-text">&ast;</span></label>
                                    <div class="mb-2">
                                        <input type="password" class="form-control" id="repassword" name="repassword" placeholder="Nhập lại mật khẩu">
                                        <div class="invalid-feedback" id="repassword_feedback">
                                            Yêu cầu nhập lại mật khẩu.
                                        </div>
                                        <div class="invalid-feedback" id="repassword_check_duplicate_false">
                                            Mật khẩu nhập lại không khớp. Yêu cầu nhập lại.
                                        </div>
                                        <div class="valid-feedback" id="repassword_check_duplicate_true">
                                            Khớp mật khẩu.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group bs-select-1">
                                    <label for="role_id">Cấp quyền user <span class="requirement-star-text">&ast;</span></label>
                                    <select class="custom-select" id="role_id" style="border-radius: .25rem;">
                                        <option selected="" disabled="" value="-1">Chọn quyền được cấp</option>
                                        @foreach (var role in ViewData["ListRole"] as List<role>)
                                        {
                                            <option value="@role.role_id">@role.value</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback" id="role_id_feedback">
                                        Yêu cầu chọn quyền được cấp.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="email">Email <span class="requirement-star-text">&ast;</span></label>
                                    <div class="mb-2">
                                        <input type="text" class="form-control" id="email" name="email" placeholder="Nhập email nhà cung cấp">
                                        <div class="invalid-feedback" id="email_feedback">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="card card-statistics">
            <div class="card-header">
                <div class="card-heading">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="card-title">Thông tin cá nhân</h4>
                        </div>
                        <div class="col-md-6 div-card-title-right">
                            <a class="card-title text-primary" href="javascript:void(0)" id="show_profile">Thêm thông tin cá nhân</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body" id="content_profile" style="display: none">
                <div>
                    <form id="formInsertExtra" class="form-horizontal" novalidate="novalidate">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="firstname">Họ và tên đệm</label>
                                    <div class="mb-2">
                                        <input type="text" class="form-control inputmask" id="firstname" name="firstname" placeholder="Nhập họ và tên đệm">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="lastname">Tên</label>
                                    <div class="mb-2">
                                        <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Nhập tên">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="control-label" for="gender_id">Giới tính</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender_id" id="male" value="1">
                                <label class="form-check-label" for="male">
                                    Nam
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender_id" id="female" value="2">
                                <label class="form-check-label" for="female">
                                    Nữ
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="phone_number">Điện thoại</label>
                                    <div class="mb-2">
                                        <input type="text" class="form-control inputmask" data-mask="(999) 999-9999" id="phone_number" name="phone_number" placeholder="Nhập số điện thoại">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="birthday">Ngày sinh</label>
                                    <div class="input-group date" id="datepicker-bottom-left">
                                        <input class="form-control inputmask" data-mask="99/99/9999" type="text" id="birthday" name="birthday" placeholder="Nhập ngày sinh">
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group bs-select-1">
                                    <label for="ddlCountry">Quốc gia</label>
                                    <select class="custom-select" id="ddlCountry" style="border-radius: .25rem;" disabled>
                                        <option value="" selected="">Việt Nam </option>

                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group bs-select-1">
                                    <label for="ddlProvince">Tỉnh Thành</label>
                                    <select class="custom-select" id="ddlProvince" style="border-radius: .25rem;">
                                        <option value="-1" selected>-- Chọn Tỉnh/Thành phố -- </option>
                                        @foreach (var province in ViewData["ListProvince"] as List<province>)
                                        {
                                            <option value="@province.Id">@province.Type @province.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group bs-select-1">
                                    <label for="ddlDistrict">Quận Huyện</label>
                                    <select class="custom-select" id="ddlDistrict" style="border-radius: .25rem;">
                                        <option value="" selected>-- Không chọn --</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group bs-select-1">
                                    <label for="ddlWard">Xã Phường / Thị trấn</label>
                                    <select class="custom-select" id="ddlWard" style="border-radius: .25rem;">
                                        <option value="">-- Không chọn -- </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="address_detail">Địa chỉ chi tiết</label>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" id="address_detail" placeholder="Nhập địa chỉ" aria-label="Nhập địa chỉ" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2">
                                        <span id="text_ward"></span><span id="text_district"></span><span id="text_province"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-3 m-b-30 m-b-30">
        <div class="card mb-0 o-hidden">
            <div class="card-header">
                <div class="card-heading">
                    <h4 class="card-title">Ảnh đại diện</h4>
                </div>
            </div>
            <div class="card-body ">
                <form>
                    <div class="displayImageUpload" style="display: none">
                        <img id="pictureUpload" />

                        <div class="row" id="bottomImageupload">
                            <div class="col-md-4">
                                <a href="javascript:void(0);" class="text-primary">Sửa ảnh</a>
                            </div>
                            <div class="col-md-4" style="text-align: center">
                                <label for="file">
                                    <a class="text-primary">Đổi ảnh</a>
                                </label>
                            </div>
                            <div class="col-md-4" style="text-align: right">
                                <a href="javascript:void(0);" onclick="deleteImg()" class="text-primary">Xóa ảnh</a>
                            </div>
                        </div>
                    </div>
                </form>
                <input type="file" name="avatar" id="file" accept="image/*" hidden>
                <div class="custom-card-body custom-file">
                    <div>
                        <img id="img-icon" src="~/Assets/images/Icon/iconImg.png" />
                    </div>
                    <div>
                        <label for="file" class="btn btn-warning custom-btn-file">
                            Upload ảnh
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" style="border-top: 1px solid rgba(0,0,0,.125);">
    <div class="col-12" style="margin-top: 15px;">
        <div class="pb-2" style="text-align:right">
            <a href="javascript:void(0)" class="btn btn-secondary" id="btnCancel">Hủy</a>
            <a href="javascript:void(0)" class="btn btn-primary" id="btn_insert">Xác nhận</a>
        </div>
    </div>
</div>

