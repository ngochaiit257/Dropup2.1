                <button type="button" class="btn btn-warning" id="confirmExit">Rời khỏi trang này</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#user').addClass('active');
        $('#add_user').addClass('active');

        $('#formInsert').trigger("reset");
        $('#formInsertExtra').trigger("reset");

        var province_id_start = $("#ddlProvince").val();
        var text_province_start = $('#ddlProvince option[value="' + province_id_start + '"]').text();
        $('#text_province').text(" " + text_province_start);
        if (province_id_start == -1) {
            $('#text_province').text(" ");
        }
        $.ajax({
                type: "GET",
                data: { id: province_id_start },
                url: '@Url.Action("GetAllDistrictByProvinceId", "GetLocal")',
                success: function (data) {
                    $("#ddlDistrict").empty();
                    $("#ddlWard").empty();
                    $("#ddlDistrict").append('<option value="-1">-- Chọn Quận/Huyện --</option>');
                    $("#ddlWard").append('<option value="-1">-- Chọn Phường/Xã --</option>');
                    $.each(data, function (key, value) {
                        $("#ddlDistrict").append('<option value="' + value.district_id + '"> ' + value.district_type + " " + value.district_name + '</option>');
                    });
                },
                error: function (xhr) {
                    toastExportError();
                }
        });


        //// truyền id của district vào
        $("#ddlProvince").on('change', function () {
            var id = $(this).val();
            if (id == -1) {
                $('#text_province').text("");
                $('#text_district').text("");
                $('#text_ward').text("");
            }
            else {
                var text_province = $('#ddlProvince option[value="' + id + '"]').text();
                $('#text_province').text(" " + text_province);
            }
            $.ajax({
                type: "GET",
                data: { id: id },
                url: '@Url.Action("GetAllDistrictByProvinceId", "GetLocal")',
                success: function (data) {
                    $("#ddlDistrict").empty();
                    $("#ddlWard").empty();
                    $("#ddlDistrict").append('<option value="-1">-- Chọn Quận/Huyện --</option>');
                    $("#ddlWard").append('<option value="-1">-- Chọn Phường/Xã --</option>');
                    $.each(data, function (key, value) {
                        $("#ddlDistrict").append('<option value="' + value.district_id + '"> ' + value.district_type + " " + value.district_name + '</option>');
                    });
                },
                error: function (xhr) {
                    toastExportError();
                }
            });
        });

        $("#ddlDistrict").on('change', function () {
            var id = $(this).val();
            if (id == -1) {
                $('#text_district').text("");
                $('#text_ward').text("");
            }
            else {
                var text_district = $('#ddlDistrict option[value="' + id + '"]').text();
                $('#text_district').text(" " + text_district + " -");
            }
            $.ajax({
                type: "GET",
                data: { id: id },
                url: '@Url.Action("GetAllWardByDistrictId", "GetLocal")',
                success: function (data) {
                    $("#ddlWard").empty();
                    $("#ddlWard").append('<option value="-1">-- Chọn Phường/Xã --</option>');
                    $.each(data, function (key, value) {
                        $("#ddlWard").append('<option value="' + value.ward_id + '"> ' + value.ward_type + " " + value.ward_name + '</option>');
                    });
                },
                error: function (xhr) {
                    toastExportError();
                }
            });
        });

         $("#ddlWard").on('change', function () {
            var id = $(this).val();
            if (id == -1) {
                $('#text_ward').text("");
            }
            else {
                var text_ward = $('#ddlWard option[value="' + id + '"]').text();
                $('#text_ward').text(text_ward + " -");
            }
        });
    });

    function imageIsLoaded(e) {
        $('#pictureUpload').attr('src', e.target.result);
        $('.displayImageUpload').css({
            display: 'block',
        });
        $('.custom-card-body').css({
            display: 'none'
        });
    };

    $(function () {
        $(":file").change(function () {
            if (this.files && this.files[0]) {
                var reader = new FileReader();
                reader.onload = imageIsLoaded;
                reader.readAsDataURL(this.files[0]);
            }
        });
    });

    function deleteImg() {
        $('.displayImageUpload').css({
            display: 'none',
        });
        $('.custom-card-body').css({
            display: 'block'
        });
        $('#file').val("");
        $("#pictureUpload").attr("src", "");

    }

    $('#show_profile').click(function () {
        $('#content_profile').css('display','block');
    });

    var checkStatus = true;
    $('input[id=username]').keyup(function () {
        var username = $("#username").val().trim();
        if (username == null || username == "") {
            $("#username_feedback").css('display', 'block');
            $("#username").addClass('is-invalid');
            $("#username_check_duplicate_true").css('display', 'none');
            $("#username_check_duplicate_false").css('display', 'none');
        }
        else {
            $.ajax({
                url: "/User/checkDuplicate",
                data: {
                    username: username,
                },
                context: document.body,
                type: "POST",
                dataType: "html",
                success: function (data) {
                    if (data != "True") {
                        checkStatus = true;
                        $("#btn_insert").removeClass("disabled");

                        $("#username").removeClass('is-invalid');
                        $("#username").addClass('is-valid');

                        $("#username_check_duplicate_true").css('display', 'block');
                        $("#username_check_duplicate_false").css('display', 'none');

                        $("#username_feedback").css('display', 'none');
                    }
                    else {
                        $("#btn_insert").addClass("disabled");

                        $("#username").removeClass('is-valid');
                        $("#username").addClass('is-invalid');

                        $("#username_check_duplicate_true").css('display', 'none');
                        $("#username_check_duplicate_false").css('display', 'block');

                        $("#username_feedback").css('display', 'none');
                    }
                },
                error: function (xhr, status) {
                    $("#valid-feedback").val("Lỗi");
                },
                complete: function (xhr, status) {
                    //$('#showresults').slideDown('slow')
                }
            });
        }

    });

    $('input[id=repassword]').keyup(function () {
        var password = $("#password").val();
        var repassword = $("#repassword").val();

        if (password == repassword) {
            $("#repassword").removeClass('is-invalid');
            $("#repassword").addClass('is-valid');
            $("#repassword_check_duplicate_false").css('display', 'none');
            $("#repassword_feedback").css('display', 'none');
            $("#repassword_check_duplicate_true").css('display', 'block');
        }
        else if (repassword == "" || repassword == null) {
            $("#repassword").removeClass('is-valid');
            $("#repassword").addClass('is-invalid');

            $("#repassword_check_duplicate_false").css('display', 'none');
            $("#repassword_check_duplicate_true").css('display', 'none');
            $("#repassword_feedback").css('display', 'block');
        }
        else if (password == "" && repassword == null) {
            $("#password").removeClass('is-valid');
            $("#password").addClass('is-invalid');

            $("#repassword").removeClass('is-valid');
            $("#repassword").addClass('is-invalid');

            $("#password_feedback").css('display', 'block');
            $("#repassword_feedback").css('display', 'block');
        }
        else {
            $("#repassword").addClass('is-invalid');
            $("#repassword").removeClass('is-valid');
            $("#repassword_check_duplicate_false").css('display', 'block');
            $("#repassword_feedback").css('display', 'none');
            $("#repassword_check_duplicate_true").css('display', 'none');
        }
    });

    $('input[id=password]').keyup(function () {
        var password = $("#password").val();
        var repassword = $("#repassword").val();

        if (password == repassword && password != "" && repassword != "") {
            $("#repassword").removeClass('is-invalid');
            $("#repassword").addClass('is-valid');
            $("#repassword_check_duplicate_false").css('display', 'none');
            $("#repassword_feedback").css('display', 'none');
            $("#repassword_check_duplicate_true").css('display', 'block');
        }
        else if (password == "" || password == null) {
            $("#password").removeClass('is-valid');
            $("#password").addClass('is-invalid');

            $("#password_feedback").css('display', 'block');
        }
        else if (password == "" && repassword == null) {
            $("#password").removeClass('is-valid');
            $("#password").addClass('is-invalid');

            $("#repassword").removeClass('is-valid');
            $("#repassword").addClass('is-invalid');

            $("#password_feedback").css('display', 'block');
            $("#repassword_feedback").css('display', 'block');
        }
        else if (password != repassword && repassword != "") {
            $("#repassword").addClass('is-invalid');
            $("#repassword").removeClass('is-valid');
            $("#repassword_check_duplicate_false").css('display', 'block');
            $("#repassword_feedback").css('display', 'none');
            $("#repassword_check_duplicate_true").css('display', 'none');
        }
        else if (password != null || password != "") {
            $("#password").removeClass('is-invalid');
            $("#password_feedback").css('display', 'none');
        }
    });

