<!-- Feedback Section Strat -->
<section class="feedback-section feedback-bg pt-100">
    <div class="container">
        <div class="section-title text-center">
            <span>Feedbacks</span>
            <h2>Phản hồi từ phía khách hàng</h2>
            <p>Chúng tôi luôn lắng nghe mọi ý kiến đóng góp của quý khách hàng thân yêu để cải thiện chất lượng dịch vụ.</p>
        </div>

        <div class="feedback-slider owl-carousel owl-theme">
            @foreach (var feedback in list_feedback)
            {
                <div class="feedback-items">
                    <i class="icofont-quote-right"></i>
                    <p>
                        @feedback.ccomment
                    </p>

                    <img src="@urlCMS/@feedback.cimage" alt="@feedback.cimage_alt">
                    <h3>@feedback.cname</h3>
                    <span>@feedback.cposition</span>
                </div>
            }
        </div>
    </div>
</section>
<!-- Feedback Section End -->
<!-- Company Section Start -->
<div class="company-section">
    <div class="container">
        <div class="company-slider owl-carousel owl-theme">
            @foreach (var partner in list_partner)
            {
                <div class="company-logo">
                    <a href="@partner.link_url"><img src="@urlCMS/@partner.image" alt="@partner.alt"></a>
                </div>
            }
        </div>
    </div>
</div>
<!-- Company Section End -->
<!-- Blog Section Start -->
<section class="blog-section pt-100 pb-70">
    <div class="container">
        <div class="section-title text-center">
            <span>Tin tức</span>
            <h2>Bài viết mới nhất</h2>
            <p>Chúng tôi chia sẻ tới bạn đọc những thông tin hữu ích, chuyên môn và kiến thức của các dịch vụ mà chúng tôi cung cấp.</p>
        </div>

        <div class="row">
            <div class="col-lg-8 col-sm-6 wow fadeInUp" data-wow-duration="1s">
                <div class="blog-card">
                    <div class="blog-img">
                        <a href="/blogs/@newest_blog.blog_seo_alias">
                            <img class="img-news-lastest" src="@urlCMS/@newest_blog.blog_image" alt="@newest_blog.blog_alt_image">
                        </a>
                    </div>
                    <div class="blog-text">
                        <h3>
                            <a href="/blogs/@newest_blog.blog_seo_alias">@newest_blog.blog_title</a>
                        </h3>
                        <ul>
                            <li>
                                <i class="icofont-ui-calendar"></i>
                                @newest_blog.show_datetime.Value.ToString("HH:mm dd/MM/yyyy")
                            </li>
                        </ul>
                        <p>@newest_blog.blog_summary</p>

                        <div class="blog-btn text-left">
                            <a href="/blogs/@newest_blog.blog_seo_alias">
                                <i class="icofont-rounded-double-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            @foreach (var blog in list_blog)
            {
                if (blog.blog_id != newest_blog.blog_id)
                {
                    <div class="col-lg-4 col-sm-6 wow fadeInUp" data-wow-duration="1s">
                        <div class="blog-card">
                            <div class="blog-img">
                                <a href="/blogs/@blog.blog_seo_alias">
                                    <img src="@urlCMS/@blog.blog_image" alt="@blog.blog_alt_image">
                                </a>
                            </div>
                            <div class="blog-text">
                                <h3>
                                    <a href="/blogs/@blog.blog_seo_alias">@blog.blog_title</a>
                                </h3>
                                <ul>
                                    <li>
                                        <i class="icofont-ui-calendar"></i>
                                        @blog.show_datetime.Value.ToString("HH:mm dd/MM/yyyy")
                                    </li>
                                </ul>
                                <p>@blog.blog_summary</p>

                                <div class="blog-btn text-left">
                                    <a href="/blogs/@blog.blog_seo_alias">
                                        <i class="icofont-rounded-double-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!-- Blog Section End -->
<!-- Newsletter Section Start -->
<div class="newsletter-section">
    <div class="container">
        <div class="newsletter-area">
            <h2>Join Newsletter For Daily Update</h2>
            <div class="col-lg-6 p-0">
                <form class="newsletter-form" data-toggle="validator">
                    <input type="email" class="form-control" placeholder="Enter Your Email" name="EMAIL" required autocomplete="off">

                    <button class="default-btn electronics-btn" type="submit">
                        Subscribe Now
                    </button>

                    <div id="validator-newsletter" class="form-result"></div>
                </form>
            </div>
            <img src="../Assets/img/newsletter-img.png" alt="newsletter image">
        </div>
    </div>
</div>
<!-- Newsletter Section End -->