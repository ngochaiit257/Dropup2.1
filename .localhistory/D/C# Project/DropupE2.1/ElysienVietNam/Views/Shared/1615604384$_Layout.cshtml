            <script>
                function registerBtn() {
                    var cphone = $('#rphone').val();
                    var cemail = $('#remail').val();
                    var cname = "Khách hàng truy cập website";
                    var cmessage = "Khách hàng nhập SỐ ĐIỆN THOẠI và EMAIL trên POPUP quảng cáo";
                    var csubject = "ĐĂNG KÝ THÀNH VIÊN";
                    if (cphone == null || cphone == "") {
                        alert("Yêu cầu nhập SỐ ĐIỆN THOẠI.");
                    }
                    else if (!phonenumber(cphone)) {
                        alert("Số điện thoại KHÔNG HỢP LỆ");
                    }
                    else if (cemail == null || cemail == "") {
                        alert("Yêu cầu nhập EMAIL.");
                    }
                    else if (!isEmail(cemail)) {
                        alert("Email KHÔNG HỢP LỆ");
                    }
                    else {
                        $.ajax({
                            type: "POST",
                            url: "/Page/SendMessage",
                            data: {
                                sender_name: cname,
                                sender_phone_number: cphone,
                                sender_email: cemail,
                                sender_subject: csubject,
                                sender_message: cmessage,
