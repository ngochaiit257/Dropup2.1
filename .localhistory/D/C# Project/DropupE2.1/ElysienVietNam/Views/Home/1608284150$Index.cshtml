@using Data;
@using Data.Providers;
@{
    ViewBag.Title = "Elysien - Make Up Your Beauty";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string urlCMS = System.Configuration.ConfigurationManager.AppSettings["urlCMS"];
    string urlSite = System.Configuration.ConfigurationManager.AppSettings["urlSite"];

    var list_slide = new StoreSlideProvider().getIsShowing();
    var banner = new StoreBannerProvider().getbyId(1);

    var list_page_main_content = new PageProvider().getAll().Where(p => p.page_id == 6 || p.page_id == 7 || p.page_id == 8).ToList();
    var list_category_parent = new CategoryProvider().getListParentCategory().Where(c => c.type_of_category_id == 1).ToList();

    var list_blog_newest = new BlogProvider().getIsShowing().OrderByDescending(b => b.show_datetime).Take(5).ToList();
    var list_cs = new StoreCustomerSayProvider().getAll();
    var logo_header = new StoreLogoProvider().getLogoHeader();

    ViewBag.Keywords = "elysien, mỹ phẩm, spa, đào tạo spa, oem, odm, máy móc dụng cụ spa";
    ViewBag.Description = "Thương hiệu mỹ phẩm, chăm sóc sắc đẹp Hàn Quốc tại Việt Nam.";
    ViewBag.Canonical = urlSite;
    ViewBag.Alternate = urlSite;
    ViewBag.Url = urlSite;
    ViewBag.Image = urlCMS + "/" + logo_header.image;
}

@if (list_slide.Count > 0)
{
    <!-- Slider Arae Start -->
    <div class="slider-area">
        <div class="slider-active-3 owl-carousel slider-hm8 owl-dot-style">
            @foreach (var slide in list_slide)
            {
                <!-- Slider Single Item Start -->
                <div class="slider-height-6 d-flex align-items-start justify-content-start bg-img" style="background-image: url(@urlCMS/@slide.image);">
                    <div class="container">
                        <div class="slider-content-1 slider-animated-1 text-left">
                            <span class="animated">
                                @slide.child_text_1
                            </span>
                            <h1 class="animated">
                                @slide.main_text
                            </h1>
                            <p class="animated">
                                @slide.child_text_2
                            </p>
                            <a href="@slide.link_url" class="shop-btn animated">Xem Chi Tiết</a>
                        </div>
                    </div>
                </div>
                <!-- Slider Single Item End -->
            }

        </div>
    </div>
}

