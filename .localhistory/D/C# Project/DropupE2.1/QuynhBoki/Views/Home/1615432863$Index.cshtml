                                    <div class="education_block_author">
                                        <div class="path-img"><a href="/blogs/@blog.blog_seo_alias" tabindex="0"><img src="@urlCMS/@blog.user.avatar" class="img-fluid" alt="@blog.user.username"></a></div>
