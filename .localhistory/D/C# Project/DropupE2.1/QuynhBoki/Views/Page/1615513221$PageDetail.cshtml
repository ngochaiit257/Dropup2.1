@model Data.page
@using Data;
@using Data.Providers;
@{
    ViewBag.Title = Model.page_title;
    Layout = "~/Views/Shared/_Layout.cshtml";

    string urlCMS = System.Configuration.ConfigurationManager.AppSettings["urlCMS"];
    string urlSite = System.Configuration.ConfigurationManager.AppSettings["urlSite"];

    var page_parent = new page();
    if (Model.page_parent_id > 0)
    {
        page_parent = new PageProvider().getById((int)Model.page_parent_id);
    }

    ViewBag.Keywords = Model.page_seo_header;
    ViewBag.Description = Model.page_seo_description;
    ViewBag.Canonical = urlSite + "/pages/" + Model.page_seo_alias;
    ViewBag.Alternate = urlSite + "/pages/" + Model.page_seo_alias;
    ViewBag.Url = urlSite + "/pages/" + Model.page_seo_alias;
    ViewBag.Image = urlCMS + "/" + Model.page_image;
}

<!-- ============================ Page Title Start================================== -->
<section class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="breadcrumbs-wrap">
                    <h1 class="breadcrumb-title">@Model.page_title</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                            @if (page_parent != null && page_parent.page_id > 0)
                            {
                                <li class="breadcrumb-item"><a href="/pages/@page_parent.page_seo_alias">@page_parent.page_title</a>></li>
                            }
                            <li class="breadcrumb-item active" aria-current="page">@Model.page_title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ============================ Page Title End ================================== -->

<section class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8">
                <!-- Overview -->
                <div class="edu_wraper">
                    <h3 class="edu_title">Lời mở đầu</h3>
                    <p>
                        Mối quan hệ của Nhật Bản và Việt Nam phát triển như hiện nay, thì việc mà giới trẻ Việt đang đổ xô đi học tiếng Nhật, và du học Nhật là điều không còn hiếm thấy. Việc đó đồng nghĩa đó là người biết tiếng Nhật ngày càng nhiều, vậy trong số những người đang biết tiếng Nhật, thì <strong>giá trị</strong> bạn đang có là bao nhiêu.
                    </p>
                    <p>
                        Để trả lời cho câu hỏi này, trước hết bạn nên đặt câu hỏi đó là ngoài tiếng Nhật thì còn gì nữa. Có rất nhiều các chứng chỉ mà hiện nay ở Nhật đang rất <strong>hot</strong>.
                    </p>
                    <h6>Và trong số đó...</h6>
                    <ul class="lists-3">
                        <li>Chứng chỉ <strong>Boki – Kế toán</strong></li>
                    </ul>
                    <p>
                        Vậy bạn sẽ được gì khi học boki?
                    </p>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4 col-md-4">

                <div class="ed_view_box style_2">

                    <div class="ed_author">
                        <div class="ed_author_thumb">
                            <img class="img-fluid" src="../Assets/common-img/quynhboki_ava.jpg" alt="founder">
                        </div>
                        <div class="ed_author_box">
                            <h4>Mrs. Quỳnh May</h4>
                            <span>Founder Quỳnh Boki</span>
                        </div>
                    </div>

                    <div class="ed_view_features pl-4">
                        <span>Quyền lợi học viên</span>
                        <ul>
                            <li><i class="ti-angle-right"></i>Bao gồm cả học online và video</li>
                            <li><i class="ti-angle-right"></i>-	Được học tất cả các kiến thức liên quan đến khóa học đã đăng ký</li>
                            <li><i class="ti-angle-right"></i>-	Được đôn đốc học bài và check bài tập</li>
                            <li><i class="ti-angle-right"></i>-	Được giải đáp tất cả mọi thắc mắc liên quan đến bài học và các nội dung liên quan đến boki, thậm chí nếu có khó khăn gì trong quá trình ở Nhật, cần tư vấn, tham khảo ý kiến về đi shyushoku, chuyển việc…</li>
                            <li><i class="ti-angle-right"></i>-	Được luyện đề và hỗ trợ đến khi đỗ, đương nhiên là cả 2 bên bao gồm học sinh và giáo viên cùng đồng lòng cố gắng </li>
                        </ul>
                    </div>
                    <div class="ed_view_link">
                        <a href="#" class="btn btn-theme enroll-btn">Enroll Now<i class="ti-angle-right"></i></a>
                    </div>

                </div>

            </div>

        </div>
    </div>
</section>