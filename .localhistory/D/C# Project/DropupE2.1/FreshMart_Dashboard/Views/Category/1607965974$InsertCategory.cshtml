            $("#category_name").removeClass('is-invalid');

            $.ajax({
                type: "POST",
                url: '@Url.Action("InsertCategory", "Category", null)',
                data: fileData,
                processData: false,
                contentType: false,
                beforeSend: function () {
                    $('#btn_insert').prop('disabled', true);
                    $('#btn_insert').text("Đang tạo danh mục...");
                },
                success: function (data) {
                     //var data_json = JSON.parse(data);
                    var date_obj = new Date();
                    var minutes = 30;
                    date_obj.setTime(date_obj.getTime() + (minutes * 60 * 1000));

                    Cookies.set("insert_category_success", "" + data.category_id, { expires: date_obj });
                    var url = '/Category/CategoryDetail?id=' + data.category_id;
                    window.location.href = url;
                },
                error: function (xhr) {
                    toastError();
                    $("html, body").animate({ scrollTop: 0 }, 600);
                },
                complete: function (xhr, status) {
                    $('#btn_insert').prop('disabled', false);
                    $('#btn_insert').text("Xác nhận");
                }
            });
        }
        return false;
    });

