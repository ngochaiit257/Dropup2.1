    function loopArray(array_index) {
        $.each(array_index, function (index, value) {
            $('#select_condition_type_' + (index + 1)).on('change', function () {
                var value = $('#select_condition_type_' + (index + 1)).val();
                if (value !== "product_price") {
                    $('#condition_price_value_' + (index + 1)).css('display', 'none');
                    $('#condition_product_name_value_' + (index + 1)).css('display', 'block');

                    $("#select_condition_" + (index + 1) + " option[value=equal]").attr('disabled', 'disabled');
                    $("#select_condition_" + (index + 1) + " option[value=more]").attr('disabled', 'disabled');
                    $("#select_condition_" + (index + 1) + " option[value=less]").attr('disabled', 'disabled');

                    $("#select_condition_" + (index + 1) + " option[value=contain]").removeAttr('disabled');
                    $("#select_condition_" + (index + 1) + " option[value='contain']").prop('selected', true);
                }
                else {
                    $('#condition_price_value_' + (index + 1)).css('display', 'block');
                    $('#condition_product_name_value_' + (index + 1)).css('display', 'none');

                    $("#select_condition_" + (index + 1) + " option[value=equal]").removeAttr('disabled');
                    $("#select_condition_" + (index + 1) + " option[value=more]").removeAttr('disabled');
                    $("#select_condition_" + (index + 1) + " option[value=less]").removeAttr('disabled');

                    $("#select_condition_" + (index + 1) + " option[value=contain]").attr('disabled', 'disabled');
                    $("#select_condition_" + (index + 1) + " option[value='equal']").prop('selected', true);
                    $(".autoNumericInput").autoNumeric('init', { aSign: '₫', pSign: 's', mDec: '0', aSep: '.', aDec: ',' });
                }
            });

            $('#remove_condition_' + (index + 1)).click(function () {
                if (array_index.length > 1) {

                    $('#div_condition_children_' + (index + 1)).remove();

                    for (var i = 0; i < array_index.length; i++) {
                        if (array_index[i] == (index + 1)) {
                            array_index.splice(i, 1);
                        }
                    }

                }
                if (array_index.length == 1) {
                    $.each(array_index, function (index, valueLast) {
                        $('#remove_condition_' + valueLast).css('display', 'none');
                        $('#div_price_condition_' + valueLast).css('width', '100%');
                    });
                }

            });

        });

    }

