</div>

<script>
    $(document).ready(function () {
        $('#blog').addClass('active');

        if (Cookies.get("insert_page_success") != null) {
            showToast("success", 'Trang nội dung đã được tạo.', "Tạo thành công");
            Cookies.remove('insert_page_success');
        }

        $('#page_time_to_show').clockface({
            format: 'HH:mm',
        });

        $('.open_clock_face').click(function (e) {
            e.stopPropagation();
            $('#page_time_to_show').clockface('toggle');
        });

        $.fn.noMask = function (regex) {
            this.on("keypress", function (e) {
                if (regex.test(String.fromCharCode(e.which))) {
                    return false;
                }
            });
        }

        $("#page_time_to_show").noMask(/[a-zA-Z]/);

        $('form, .summernote, input, select').trigger("reset");
        $('#summernote').summernote({
            followingToolbar: false,
            height: 500,
            toolbar: [
                ['undo', ['undo',]],
                ['redo', ['redo',]],
                ['style', ['style']],
                ['font', ['bold', 'italic', 'underline', 'clear']],
                ['fontname', ['fontname']],
                ['color', ['color']],
                ['fontsize', ['fontsize']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['insert', ['link', 'picture', 'video', 'hr']],
                ['height', ['height']],
                ['table', ['table']],
                ['table', ['bootstrap-grid']],
                ['strikethrough', ['strikethrough']],
                ['superscript', ['superscript']],
                ['subscript', ['subscript']],
                ['view', ['fullscreen', 'codeview']],
                ['help', ['help']],
            ],
            callbacks: {
                onKeyup: function (e) {
                    form_has_changed = true;
                    var product_description = $('#summernote').summernote('code').replace(/<[^>]*>/g, '');

                    if (product_description.length > 0) {
                        form_has_changed = true;
                    } else {
                        form_has_changed = false;
                    }

                    $('#seo_description').val(product_description.slice(0, 320));

                    var textlenght = maxLengthDescription - product_description.length;
                    $('#count_seo_description').text(textlenght);
                    if (product_description.length > 320) {
                        $('#count_seo_description').text("0");
                    }
                },
                onPaste: function () {
                    var product_description = $('#summernote').summernote('code').replace(/<[^>]*>/g, '');
                    if (product_description.length > 0) {
                        form_has_changed = true;
                    } else {
                        form_has_changed = false;
                    }
                },
            }
        });
    });

    function imageIsLoaded(e) {
        $('#pictureUpload').attr('src', e.target.result);
        $('.displayImageUpload').css({
            display: 'block',
        });
        $('.custom-card-body').css({
            display: 'none'
        });
    };

    $(function () {
        $(":file").change(function () {
            if (this.files && this.files[0]) {
                var reader = new FileReader();
                reader.onload = imageIsLoaded;
                reader.readAsDataURL(this.files[0]);
                form_has_changed = true;
                status_image_change = true;
            }
        });
    });

    var form_has_changed = false;
    function deleteImg() {
        $('.displayImageUpload').css({
            display: 'none',
        });
        $('.custom-card-body').css({
            display: 'block'
        });
        $('#file').val("");
        $("#pictureUpload").attr("src", "");
        status_image_change = true;
    }

    $('input:radio[name="set_time_show"]').change(function () {
        if (this.checked && this.value == 'true') {
            $('.div_show_datetime').css('display', 'none');
            $('.show_datetime_title').css('display', 'none');
            $('#icon_remove_set_time_show').css('display', 'none');
        }
        else {
            $('.show_datetime_title').css('display', 'block');
        }
    });

    var get_datetime_to_show_status = false;
    $('.show_datetime_title').click(function () {
        $('#icon_remove_set_time_show').css('display', 'block');
        $('.div_show_datetime').css('display', 'block');
        get_datetime_to_show_status = true;
    });

    $('#icon_remove_set_time_show').click(function () {
        $('.div_show_datetime').css('display', 'none');
        $('#icon_remove_set_time_show').css('display', 'none');
        get_datetime_to_show_status = false;
    });

    var maxLength = 70;
    $('input[id=page_title]').keyup(function () {
        var page_title = $('#page_title').val().trim();

        $("#seo_header").val(page_title.slice(0, 70));

        var textlenght = maxLength - $(this).val().length;
        $('#count_seo_header').text(textlenght);
        if (page_title.length > 70) {
            $('#count_seo_header').text("0");
        }
        $("#seo_alias").val(ConvertToSeoTitle(page_title));
        $("#alt_image").val(ConvertToSeoTitle(page_title));

        $("#page_title").removeClass('is-invalid');
        $("#page_title").removeClass('is-valid');

        $("#page_title_check_duplicate_true").css('display', 'none');
        $("#page_title_check_duplicate_false").css('display', 'none');

        $("#page_title_feedback").css('display', 'none');
    });

    $('input[id=seo_header]').keyup(function () {
        var textlenght = maxLength - $(this).val().length;
        $('#count_seo_header').text(textlenght);
    });

    var maxLengthDescription = 320;
    $('textarea#seo_description').keyup(function () {
        var textlenght = maxLengthDescription - $('textarea#seo_description').val().length;
        $('#count_seo_description').text(textlenght);
    });

    $('#edit_alt_image').click(function () {
        $('#div_alt_image').css('display', 'block');
    });

    $('textarea#page_summary').keyup(function () {
        if ($('#page_summary').val().length > 500) {
            $('#page_summary').addClass('is-invalid');
        } else {
            $('#page_summary').removeClass('is-invalid');
        }
    });

    var checkPageTitleDupplicateStatus = false;
    function checkTitlePage(old_title) {
        var page_title = $("#page_title").val().trim();
        if (page_title == old_title) {
            $("#page_title_feedback").css('display', 'none');
            $("#page_title").removeClass('is-invalid');
            $("#page_title_check_duplicate_true").css('display', 'none');
            $("#page_title_check_duplicate_false").css('display', 'none');
        } else {
            if (page_title == null || page_title == "") {
                $("#page_title_feedback").css('display', 'block');
                $("#page_title").addClass('is-invalid');
                $("#page_title_check_duplicate_true").css('display', 'none');
                $("#page_title_check_duplicate_false").css('display', 'none');
            }
            else {
                $.ajax({
                    url: "/Page/CheckPageTitleDuplicate",
                    data: {
                        page_title: page_title,
                    },
                    context: document.body,
                    type: "POST",
                    dataType: "html",
                    success: function (data) {
                        if (data != "True") {
                            checkPageTitleDupplicateStatus = false;
                            $("#page_title").removeClass('is-invalid');
                            $("#page_title").addClass('is-valid');

                            $("#page_title_check_duplicate_false").css('display', 'block');
                            $("#page_title_check_duplicate_true").css('display', 'none');

                            $("#page_title_feedback").css('display', 'none');
                        }
                        else {
                            checkPageTitleDupplicateStatus = true;
                            $("#page_title").removeClass('is-valid');
                            $("#page_title").addClass('is-invalid');

                            $("#page_title_check_duplicate_false").css('display', 'none');
                            $("#page_title_check_duplicate_true").css('display', 'block');

                            $("#page_title_feedback").css('display', 'none');
                        }
                    },
                    error: function (xhr, status) {
                        showToast("error", "Có lỗi xảy ra.", "Lỗi");
                    },
                    complete: function (xhr, status) {
                        //$('#showresults').slideDown('slow')
                    }
                });
            }
        }
    }

    var status_image_change = false;
    function updatePage() {
        var fileData = new FormData();
        var fileUpload = $("#file").get(0);
        var files = fileUpload.files;

        //Validation
        if ($("#page_title").val().trim() == null || $("#page_title").val().trim() == "") {
            $('html, body').animate({
                scrollTop: $("#div_page_info").offset().top
            }, 600);
            showToast("error", "Trang nội dung yêu cầu cần có <strong>Tiêu đề</strong>", "Lỗi nhập tiêu đề");
            $("#page_title_feedback").css('display', 'block');
            $("#page_title").addClass('is-invalid');
            $("#page_title_check_duplicate_true").css('display', 'none');
            $("#page_title_check_duplicate_false").css('display', 'none');
            $('#page_summary').removeClass('is-invalid');
        }
        else if (checkPageTitleDupplicateStatus == true) {
            $('html, body').animate({
                scrollTop: $("#div_page_info").offset().top
            }, 600);
            showToast("error", "Tiêu đề trang đã tồn tại. Vui lòng chọn tiêu đề khác", "Lỗi nhập tiêu đề");
            $("#page_title_check_duplicate_true").css('display', 'block');
            $("#page_title").addClass('is-invalid');
            $("#page_title_feedback").css('display', 'none');
            $("#page_title_check_duplicate_false").css('display', 'none');
            $('#page_summary').removeClass('is-invalid');
        }
        else if ($('#page_summary').val().length > 500) {
            $('html, body').animate({
                scrollTop: $("#body_of_sort_description").offset().top
            }, 600);
            $('#page_summary').addClass('is-invalid');
            showToast("error", "Mô tả vượt quá 500 ký tự", "Lỗi nhập mô tả");
        }
        else {
            $("#page_title_feedback").css('display', 'none');
            $("#page_title_check_duplicate_true").css('display', 'none');
            $("#page_title_check_duplicate_false").css('display', 'none');
            $("#page_title").removeClass('is-invalid');
            $('#page_summary').removeClass('is-invalid');

            if ($('#check_has_page_parent').is(':checked') && $('#select_page_parent').val() != null) {
                fileData.append("page_parent_id", $("#select_page_parent").val());
            }

            //Set time show page
            var is_showing = true;
            if ($("input[name='set_time_show']:checked").val() == "false" || $("input[name='set_time_show']:checked").val() == false) {
                is_showing = false;
                fileData.append("is_showing", is_showing);
                fileData.append("page_date_to_show", $("#page_date_to_show").val().trim());
                fileData.append("page_time_to_show", $('#page_time_to_show').clockface('getTime').trim());
            }
            else {
                fileData.append("is_showing", is_showing);
            }
            fileData.append("page_id", @Model.page_id);
            fileData.append("page_image", files[0]);
            fileData.append("page_image_alt", $("#alt_image").val());
            fileData.append("page_title", $("#page_title").val().trim());
            fileData.append("page_category_id", $('#select_category_page_id').val());
            fileData.append("page_content", $('#summernote').summernote('code'));
            fileData.append("page_summary", $('#page_summary').val());
            fileData.append("mount_on_header_menu_status", $('#mount_on_header_menu_status').is(":checked"));
            fileData.append("mount_on_footer_menu_status", $('#mount_on_footer_menu_status').is(":checked"));
            fileData.append("status_image_change", status_image_change);

            fileData.append("page_seo_alias", $("#seo_alias").val().trim());
            fileData.append("page_seo_description", $("#seo_description").val().trim());
            fileData.append("page_seo_header", $("#seo_header").val().trim());

            $.ajax({
            type: "POST",
            url: '@Url.Action("UpdatePage", "Page", null)',
            data: fileData,
            processData: false,
            contentType: false,
                success: function (data) {
                    $('#show_seo_header').text($('#seo_header').val());
                    $('#show_seo_description').text($('#seo_description').val());
                    $('#show_seo_alias').text('@ViewBag.PrefixUrl' + "/page/" + $('#seo_alias').val());
                    $('#show_seo_alias').attr('href','@ViewBag.PrefixUrl' + "/page/" + $('#seo_alias').val());
                    showToast("success", 'Trang nội dung đã được cập nhật.', "Cập nhật thành công");
            },
            error: function (xhr) {
                toastError();
                $("html, body").animate({ scrollTop: 0 }, 600);
            }
        });
        }
    }

    $('#check_has_page_parent').change(function () {
        if (this.checked) {
            $('#select_page_parent').removeClass('hidden_element');
        } else {
            $('#select_page_parent').addClass('hidden_element');
        }
    });
</script>