@model Data.page
@using Data;
@using Data.Providers;
@{
    ViewBag.Title = Model.page_title;
    Layout = "~/Views/Shared/_Layout.cshtml";

    DateTime current_datetime = System.DateTime.Now;
    string url = System.Configuration.ConfigurationManager.AppSettings["urlPresentationFreshMart"];
}

<!-- begin row -->
<div class="row">
    <div class="col-md-12 m-b-30">
        <!-- begin page title -->
        <div class="d-block d-sm-flex flex-nowrap align-items-center">
            <div class="page-title mb-2 mb-sm-0">
                <h1>@Model.page_title</h1>
            </div>
            <div class="ml-auto d-flex align-items-center">
                <nav>
                    <ol class="breadcrumb p-0 m-b-0">
                        <li class="breadcrumb-item">
                            <a href="/"><i class="ti ti-home"></i></a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/Configuration/Index">Quản trị website</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/Page/Index">Page</a>
                        </li>
                        <li class="breadcrumb-item active text-primary" aria-current="page">@Model.page_title</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!-- end page title -->
    </div>
</div>
<!-- end row -->

<div class="row">
    <div  class="col-xxl-9 col-xl-9 col-lg-9 col-md-9">
        <div class="card card-statistics" id="div_page_info">
            <div class="card-header">
                <div class="card-heading">
                    <h4 class="card-title">Nội dung trang</h4>
                </div>
            </div>
            <div class="card-body">
                <div>
                    <form class="form-horizontal" novalidate="novalidate">
                        <div class="form-group">
                            <label class="control-label" for="page_title">Tiêu đề trang <span class="requirement-star-text">&ast;</span></label>
                            <div class="mb-2">
                                <input value="@Model.page_title" type="text" class="form-control" id="page_title" name="page_title" placeholder="Nhập tiêu đề trang nội dung" onchange="checkTitlePage('@Model.page_title')">
                                <div class="invalid-feedback" id="page_title_feedback">
                                    Yêu cầu nhập tiêu đề.
                                </div>
                                <div class="invalid-feedback" id="page_title_check_duplicate_true">
                                    Tiêu đề này đã tồn tại trong cơ sở dữ liệu. Vui lòng chọn tiêu đề khác.
                                </div>
                                <div class="valid-feedback" id="page_title_check_duplicate_false">
                                    Tiêu đề có thể sử dụng được.
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nội dung</label>
                            <div class="mb-2">
                                <div id="summernote" class="summernote">@Html.Raw(Model.page_content)</div>
                            </div>
                        </div>
                        <div class="form-group" id="body_of_sort_description">
                            <label class="control-label" for="page_summary">Mô tả ngắn</label>
                            <textarea class="form-control" rows="5" placeholder="Nhập mô tả ngắn không quá 500 ký tự" id="page_summary">@Model.page_summary</textarea>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="card card-statistics">
            <div class="card-header">
                <div class="card-heading">
                    <div class="card-heading">
                        <h4 class="card-title">Tối ưu SEO</h4>
                        <small>
                            Thiết lập các thẻ mô tả giúp khách hàng dễ dàng tìm thấy trang nội dung này trên công cụ tìm kiếm như Google.
                        </small>
                    </div>
                    <div class="note-for-card-title">
                        <a id="show_seo_header" class="text-info font-22 font-bold">@Model.page_seo_header</a><br />
                        <a id="show_seo_alias" class="text-primary" target="_blank" href="@url/page/@Model.page_seo_alias">@url/page/@Model.page_seo_alias</a><br />
                        <a id="show_seo_description">
                            @Model.page_seo_description
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body" id="">
                <div>
                    <form class="form-horizontal" novalidate="novalidate">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="control-label" for="seo_header">Tiêu đề trang</label>
                                </div>
                                <div class="col-md-6 text-right">
                                    <a>Số ký tự còn lại: </a><a id="count_seo_header"> @(70 - Model.page_seo_header.Length)</a>
                                </div>
                            </div>
                            <div class="mb-2">
                                <input type="text" maxlength="70" value="@Model.page_seo_header" class="form-control" id="seo_header" name="seo_header" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="control-label" for="seo_description">Thẻ mô tả</label>
                                </div>
                                <div class="col-md-6 text-right">
                                    <a>Số ký tự còn lại: </a><a id="count_seo_description"> @(320 - Model.page_seo_description.Length)</a>
                                </div>
                            </div>
                            <div class="mb-2">
                                <textarea class="form-control" id="seo_description" name="seo_description" rows="3" maxlength="320">@Model.page_seo_description</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="seo_alias">Đường dẫn / Alias</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon3">@url/page/</span>
                                </div>
                                <input type="text" value="@Model.page_seo_alias" class="form-control" name="seo_alias" id="seo_alias" aria-describedby="basic-addon3" maxlength="150">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>

    <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-3 m-b-30 m-b-30">
        <div class="">
            <div class="card mb-0 o-hidden">
