                <div class="card-header">
                    <div class="card-heading">
                        <h4 class="card-title">Ảnh đại diện sản phẩm</h4>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.product_image == null || Model.product_image == "")
                    {
