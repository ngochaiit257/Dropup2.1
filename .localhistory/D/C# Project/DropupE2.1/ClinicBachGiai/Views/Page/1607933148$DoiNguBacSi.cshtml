@using Data;
@using Data.Providers;
@{
    ViewBag.Title = "Phòng khám Đa khoa Bách Giai | Khám nam khoa tốt nhất tại Hà Nội";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string urlCMS = System.Configuration.ConfigurationManager.AppSettings["urlCMS"];
    string urlSite = System.Configuration.ConfigurationManager.AppSettings["urlSite"];
    var list_slide = new StoreSlideProvider().getIsShowing();
    ViewBag.LinkChat = System.Configuration.ConfigurationManager.AppSettings["linkChat"];
    var list_nhan_su = new StoreMembershipProvider().getAll();

    ViewBag.Keywords = "phòng khám nam khoa, phòng khám nam khoa tốt, phòng khám nam khoa uy tín, phòng khám nam khoa hà nội";
    ViewBag.Description = "Đội Ngũ Bác Sĩ Giỏi Tại Phòng Khám Đa khoa Bách Giai 813 Giải Phóng Đã Điều Trị Khỏi Cho Tôi Căn Bệnh Mà Tôi Đấu Tranh Suốt 1 Năm Nay Chỉ Trong 30 Ngày.";
    ViewBag.Canonical = urlSite;
    ViewBag.Alternate = urlSite;
    ViewBag.Url = urlSite;
    ViewBag.Image = urlCMS + "/" + logo_header.image;
}
<!-- Start Main Banner Area -->
<div class="main-banner">
    <div class="main-banner-slider owl-carousel owl-theme">
        @foreach (var slide in list_slide)
        {
            <div class="main-banner-item main-banner-item-mobile-zoom" style="background-image: url('@urlCMS/@slide.image');"></div>
        }
    </div>
</div>
<!-- End Main Banner Area -->
<!-- Start Reviews Area -->
<section class="reviews-area ptb-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-12">
                <div class="dashboard-profile">
                    <div class="profile-box">
                        <img src="~/Assets/images/PageDoiNguBacSi/doi-ngu-bac-si.jpg" alt="đội ngũ bác sĩ" />

                        <div class="profile-designation">
                            <h3>Đội ngũ bác sĩ</h3>
                            <p>Phòng khám Đa khoa Bách Giai</p>
                            <span>813 Giải Phóng - Hoàng Mai- Hà Nội</span>
                        </div>
                    </div>
                    <div class="hidden-xs hidden-sm">
                        <div class="profile-box">
                            <img src="~/Assets/images/Banner-benh-xa-hoi.png" alt="bệnh xã hội banner" />
                        </div>
                        <div class="profile-box">
                            <img src="~/Assets/images/Banner-cat-bao-quy-dau.png" alt="cắt bao quy đầu banner" />
                        </div>
                        <div class="profile-box">
                            <img src="~/Assets/images/Banner-xuat-tinh-som.png" alt="xuất tinh sớm banner" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-9 col-md-12">
                <div class="reviews-list">
                    @foreach (var ns in list_nhan_su)
                    {
                        <div class="reviews-box">
                            <div class="image-box">
                                <img src="@urlCMS/@ns.mavatar" alt="@ns.mname">
                            </div>

                            <div class="reviews-content">
                                <h3>@ns.mname</h3>
                                <span>@ns.mposition</span>
                                <p>@ns.msummary</p>
                                <a href="javascript:void(0)" onclick="showModal()" class="reply-btn">Đặt lịch tư vấn</a>
                                <a href="@ViewBag.LinkChat" class="reply-btn">Chat trực tuyến</a>
                                <div class="rating">
                                    <i class='bx bxs-star'></i>
                                    <i class='bx bxs-star'></i>
                                    <i class='bx bxs-star'></i>
                                    <i class='bx bxs-star'></i>
                                    <i class='bx bxs-star'></i>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Reviews Area -->
