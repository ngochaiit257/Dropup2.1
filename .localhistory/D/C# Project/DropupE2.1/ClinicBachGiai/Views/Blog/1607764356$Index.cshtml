
@{
    ViewBag.Title = ViewBag.CategoryBlog.blog_category_name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-banner-area-two">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-banner-content-two">
                    <h2>@ViewBag.CategoryBlog.blog_category_name</h2>
                    <ul>
                        <li>
                            <a href="/">Trang chủ</a>
                        </li>
                        <li>@ViewBag.CategoryBlog.blog_category_name</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Start Reviews Area -->
<section class="reviews-area ptb-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-12">
                <div class="dashboard-profile">
                    <div class="sidebar">
                        <div class="sidebar-title">
                            <h3>Đặt lịch online</h3>
                        </div>
                        <form>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Tên của bạn</label>
                                        <input type="text" class="form-control" placeholder="Nhập tên của bạn tại đây">
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Số điện thoại</label>
                                        <input type="text" class="form-control" placeholder="Nhập số điện thoại của bạn tại đây">
                                    </div>
                                </div>

                                <div class="col-lg-12 col-sm-12">
                                    <div class="form-group">
                                        <label>Nhập ngày tháng</label>
                                        <input id="datetimepicker" type="text" class="form-control" placeholder="@DateTime.Now.ToString("dd.MM.yyyy")">
                                    </div>
                                </div>

                                <div class="col-lg-12 col-sm-12">
                                    <div class="form-group" style="text-align: right">
                                        <a href="javascript:void(0)" class="default-btn" id="show-modal-form">Đăng Ký Ngay</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 col-md-12">
                <div class="reviews-list" id="data_table">
                    @{Html.RenderAction("GetBlog", "Blog", new { page_num = ViewBag.page_num, seo_alias = ViewBag.CategoryBlogSeoAlias });}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Reviews Area -->
