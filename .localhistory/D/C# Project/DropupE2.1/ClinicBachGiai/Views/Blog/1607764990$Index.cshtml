
@{
    ViewBag.Title = ViewBag.CategoryBlog.blog_category_name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-banner-area-two">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-banner-content-two">
                    <h2>@ViewBag.CategoryBlog.blog_category_name</h2>
                    <ul>
                        <li>
                            <a href="/">Trang chủ</a>
                        </li>
                        <li>@ViewBag.CategoryBlog.blog_category_name</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Start Reviews Area -->
<section class="reviews-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12">
                <div class="reviews-list" id="data_table">
                    @{Html.RenderAction("GetBlog", "Blog", new { page_num = ViewBag.page_num, seo_alias = ViewBag.CategoryBlogSeoAlias });}
                </div>
            </div>
            <div class="col-lg-3 col-md-12">
                <div class="dashboard-profile">
                    <div class="sidebar">
                        <div class="sidebar-title">
                            <h3>Đặt lịch online</h3>
                        </div>
                        <form>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Tên của bạn</label>
                                        <input type="text" class="form-control" placeholder="Nhập tên tại đây">
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Số điện thoại</label>
                                        <input type="text" class="form-control" placeholder="Nhập số điện thoại tại đây">
                                    </div>
                                </div>

                                <div class="col-lg-12 col-sm-12">
                                    <div class="form-group">
                                        <label>Nhập ngày tháng</label>
                                        <input id="datetimepicker" type="text" class="form-control" placeholder="@DateTime.Now.ToString("dd.MM.yyyy")">
                                    </div>
                                </div>

                                <div class="col-lg-12 col-sm-12">
                                    <div class="form-group" style="text-align: center">
                                        <a href="javascript:void(0)" class="default-btn">Đăng Ký Ngay</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="sidebar">
                        <div class="sidebar-title">
                            <h3>Đội ngũ bác sĩ</h3>
                        </div>
                        <div class="categories-slider owl-carousel owl-theme">
                            @foreach (var category in list_benh_chinh)
                            {
                                <div class="categories-item-box">
                                    <img src="@urlCMS/@category.image" alt="@category.alt_image" />
                                    <h3>
                                        <a href="/category/@category.seo_alias">@category.category_name</a>
                                    </h3>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Reviews Area -->
