<!-- Flat latest new -->
<section class="flat-row flat-latest-new">
    <div class="container">
        <div class="row">
            <div class="blog-shortcode blog-slist">

                <article class="post col-md-6 clearfix">
                    <div class="title-section style4">
                        <h1 class="title"><span>Blogs</span> Mới nhất</h1>
                        <p>Được Tokaido cập nhật liên tục để chia sẻ tới bạn đọc.  </p>
                    </div>

                    <div class="content-post">
                        <div class="entry-meta">@newest_blog.show_datetime.Value.ToString("HH:mm dd-MM-yyyy")</div>

                        <h3 class="title-post"><a href="/blogs/@newest_blog.blog_seo_alias">@newest_blog.blog_title</a></h3>

                        <div class="entry-post excerpt">
                            <p>@newest_blog.blog_summary</p>
                            <div class="read-more">
                                <a href="/blogs/@newest_blog.blog_seo_alias">
                                    Đọc thêm
                                </a>
                            </div>
                        </div>
                    </div><!-- /.content-post -->
                </article>

                <article class="post col-md-6 clearfix">
                    <div class="flat-video-fancybox">
                        <!--  <div class="overlay"></div> -->
                        <a class="fancybox" data-type="" href="/blogs/@newest_blog.blog_seo_alias">
                            <img src="@urlCMS/@newest_blog.blog_image" alt="@newest_blog.blog_alt_image">
                        </a>
                    </div>
                </article>

                @foreach (var blog in list_blog)
                {
                    if (blog.blog_id != newest_blog.blog_id)
                    {
                        <article class="post col-md-6 clearfix">
                            <div class="featured-post">
                                <img src="@urlCMS/@blog.blog_image" alt="@newest_blog.blog_alt_image">
                            </div>

                            <div class="content-post bgffff">
                                <div class="entry-meta">@blog.show_datetime.Value.ToString("HH:mm dd-MM-yyyy")</div>

                                <h3 class="title-post"><a href="/blogs/@blog.blog_seo_alias">@blog.blog_title</a></h3>

                                <div class="entry-post excerpt">
                                    <p>@blog.blog_summary</p>
                                    <div class="read-more">
                                        <a href="/blogs/@blog.blog_seo_alias">
                                            Đọc thêm
                                        </a>
                                    </div>
                                </div>
                            </div><!-- /.content-post -->
                        </article>
                    }
                }
            </div>
        </div><!--row-->
    </div><!--container -->
</section>

