@foreach (var category_parent in list_category_parent)
{
    if (category_parent.status == true && category_parent.show_datetime <= DateTime.Now)
    {
        <section class="flat-row flat-imagebox index-1">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="title-section style2 ">
                            <div class="top-section">
                                <p><a href="/collections/@category_parent.seo_alias">Xem tất cả</a></p>
                            </div>
                            <h1 class="title">Đồ dùng nhà bếp</h1>
                        </div>
                    </div><!--col-md-12-->
                </div><!--row-->

                <div class="row">
                    <div class="flat-divider d10px"></div>

                    @{ var list_category_child = new CategoryProvider().getByCategoryParentId(category_parent.category_id);}

                    @if (list_category_child.Count > 0)
                    {
                        foreach (var category_child in list_category_child)
                        {
                            <div class="item">
                                <div class="imagebox effect1">
                                    <div class="box-wrap">
                                        <div class="box-image">
                                            <a href="/collections/@category_child.seo_alias"><img src="@urlCMS/@category_child.image" alt="@category_child.alt_image"></a>
                                        </div>
                                        <div class="box-content">
                                            <h5><a href="/collecitons/@category_child.seo_alias">@category_child.category_name</a></h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }



