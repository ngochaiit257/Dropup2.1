                                    <i class="fas fa-clock text-primary fa-2x"></i>
                                    <div class="ml-3">
                                        <h5 class="font-weight-600 text-blue course_detail_subject">Thời gian học</h5>
                                        @if (info_course_time != null)
                                        {
                                            <p>@info_course_time.element_variation_name</p>
                                        }
                                    </div>
                                </div>
                            </div>
