@using Data;
@using Data.Providers;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string urlCMS = System.Configuration.ConfigurationManager.AppSettings["urlCMS"];
    string urlSite = System.Configuration.ConfigurationManager.AppSettings["urlSite"];

    var list_khoa_hoc = new ProductProvider().getByCategoryIdOnSite(55);
    var list_testi = new StoreCustomerSayProvider().getAll();

    var list_tt_va_sk = new BlogProvider().getByCategoryIdShowing(3).Take(3).ToList();
    var list_hoatdongngoaikhoa = new BlogProvider().getByCategoryIdShowing(4).Take(8).ToList();
    var list_khonggian = new BlogProvider().getByCategoryIdShowing(6).Take(8).ToList();
    var list_lichhoc = new BlogProvider().getByCategoryIdShowing(5).Take(8).ToList();
    var list_demokhoahoc = new BlogProvider().getByCategoryIdShowing(7).Take(8).ToList();
}


<!-- start of banner -->
