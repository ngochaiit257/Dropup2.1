<section class="team-area pb-70">
    <div class="container">

        <div class="section-title center-div">
            <span class="sub-title">Sản phẩm nổi bật</span>
            <h2>Một số <span>Dự án</span> chúng tôi đã thực hiện</h2>
        </div>

        <div class="wrapper">

            <div class="tab-wrapper">
                <ul class="tabs">
                    <li class="tab-link active" data-tab="@cp_active.category_id">@cp_active.category_name</li>
                    @foreach (var cp in list_category_project)
                    {
                        if (cp.category_id != cp_active.category_id)
                        {
                            <li class="tab-link" data-tab="@cp.category_id">@cp.category_name</li>
                        }
                    }
                </ul>
            </div>

            <div class="content-wrapper">

                <div id="tab-@cp_active.category_id" class="tab-content active">
                    @{ var list_project_active = new ProductProvider().getByCategoryIdOnSite(cp_active.category_id).Take(9).ToList();}
                    <div class="row">
                        @foreach (var project_active in list_project_active)
                        {
                            <div class="col-sm-6 col-lg-4">
                                <div class="team-item">
                                    <div class="top card-overlay-custom">
                                        <img src="@urlCMS/@project_active.product_image" alt="@project_active.alt_image">
