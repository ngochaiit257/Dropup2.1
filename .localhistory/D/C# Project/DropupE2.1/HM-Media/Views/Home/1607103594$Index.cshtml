                                    <div class="bottom">
                                        <h3>
                                            <a href="/@project_active.seo_alias">@project_active.product_name</a>
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                @foreach (var cp in list_category_project)
                {
                    if (cp.category_id != cp_active.category_id)
                    {
                        <div id="tab-@cp.category_id" class="tab-content">
                            @{ var list_project = new ProductProvider().getByCategoryIdOnSite(cp.category_id).Take(9).ToList();}
