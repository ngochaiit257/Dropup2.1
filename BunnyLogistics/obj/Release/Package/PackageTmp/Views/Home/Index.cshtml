<script>
    function animateValue(id, start, end, duration) {
        if (start === end) return;
        var range = end - start;
        var current = start;
        var increment = end > start ? 1 : -1;
        var stepTime = Math.abs(Math.floor(duration / range));
        var obj = document.getElementById(id);
        var timer = setInterval(function () {
            current += increment;
            obj.innerHTML = current;
            if (current == end) {
                clearInterval(timer);
            }
        }, stepTime);
    }

    animateValue("num_km", 87157, 87357, 5000);
    animateValue("num_country", 100, 200, 5000);
    animateValue("num_customer", 100, 300, 5000);
    animateValue("num_year", 0, 10, 5000);
</script>

